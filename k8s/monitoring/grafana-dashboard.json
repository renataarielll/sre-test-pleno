{
  "annotations": { "list": [] },
  "editable": true,
  "panels": [
    {
      "title": "CPU Usage per Pod",
      "type": "gauge",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "targets": [{ "expr": "sum(irate(container_cpu_usage_seconds_total{image!=\"\"}[5m])) by (pod)" }],
      "fieldConfig": { "defaults": { "unit": "percentunit", "thresholds": { "mode": "absolute", "steps": [{ "color": "green", "value": null }, { "color": "red", "value": 0.7 }] } } }
    },
    {
      "title": "Request Latency (P95)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "targets": [{ "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (le))" }]
    },
    {
      "title": "Total Requests (Rate)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "targets": [{ "expr": "sum(rate(http_requests_total[5m]))" }]
    },
    {
      "title": "Error Rate (5xx)",
      "type": "gauge",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "targets": [{ "expr": "sum(rate(http_requests_total{status=~'5..'}[5m]))" }],
      "fieldConfig": { "defaults": { "thresholds": { "mode": "absolute", "steps": [{ "color": "green", "value": null }, { "color": "red", "value": 1 }] } } }
    }
  ],
  "refresh": "5s",
  "schemaVersion": 36,
  "style": "dark",
  "title": "SRE Application Dashboard"
}